<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    tools:context=".MainActivity">

    <TextView
            android:text="TextView"
            android:layout_width="115dp"
            android:layout_height="42dp" android:id="@+id/textView_DoAm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.621"
            app:layout_constraintVertical_bias="0.506"/>
    <EditText
            android:layout_width="86dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:text="Độ ẩm"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintVertical_bias="0.506"/>
    <Button
            android:id="@+id/btnConnect"
            android:layout_width="113dp"
            android:layout_height="108dp"
            android:background="@drawable/connect_design"
            android:text="Connect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.882"/>
    <Switch
            android:text="Điều khiển Đèn"
            android:layout_width="360dp"
            android:layout_height="43dp" android:id="@+id/switch1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.606"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Switch
            android:text="Điều khiển quạt"
            android:layout_width="360dp"
            android:layout_height="43dp" android:id="@+id/switch2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintVertical_bias="0.683"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Large"/>

    <com.jjoe64.graphview.GraphView android:layout_width="363dp"
                                    android:layout_height="152dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:id="@+id/graph" app:layout_constraintHorizontal_bias="0.488"
                                    app:layout_constraintVertical_bias="0.092"/>
    <TextView
            android:text="TextView"
            android:layout_width="113dp"
            android:layout_height="42dp" android:id="@+id/textView_NhietDo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.615" app:layout_constraintVertical_bias="0.414"/>
    <EditText
            android:layout_width="86dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:text="Nhiệt độ"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintVertical_bias="0.412"/>

</androidx.constraintlayout.widget.ConstraintLayout>